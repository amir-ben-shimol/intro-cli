{
	"name": "intro-cli",
	"version": "1.0.6",
	"description": "A customizable onboarding tool that greets users and provides project instructions directly through your CLI after installation",
	"main": "dist/index.js",
	"bin": {
		"intro": "dist/cli.js"
	},
	"author": "Amir Ben Shimol",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/amir-ben-shimol/intro-cli"
	},
	"keywords": [
		"cli",
		"onboarding",
		"welcome",
		"instructions",
		"init",
		"intro",
		"setup",
		"guide",
		"chalk",
		"figlet",
		"customizable",
		"project",
		"tool",
		"automation"
	],
	"scripts": {
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config build",
		"prepare": "pnpm setdev",
		"build": "tsc --project tsconfig.build.json",
		"start": "ts-node src/cli.ts",
		"type-check": "tsc --project ./tsconfig.json",
		"lint": "eslint -c ./.eslintrc.cjs --ignore-path ./.eslintignore \"./**/*.{ts,tsx,cjs}\"",
		"knip": "knip -c ./knip.json",
		"inflint": "inflint -c ./inflint.config.cjs",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}",
		"cnb": "npx cnb --check"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"figlet": "1.7.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.5.0",
		"@exlint.io/inflint": "2.1.1",
		"@types/jest": "29.5.13",
		"@types/node": "22.5.5",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"cnb": "1.2.3",
		"commitizen": "4.3.0",
		"commitlint": "19.5.0",
		"cz-vinyl": "2.5.1",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "3.0.0",
		"eslint-plugin-i18next": "6.1.0",
		"eslint-plugin-import": "2.30.0",
		"eslint-plugin-jsx-a11y": "6.10.0",
		"eslint-plugin-unicorn": "55.0.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"husky": "9.1.6",
		"inquirer": "8",
		"jest": "29.7.0",
		"knip": "5.30.4",
		"npm-run-all2": "6.2.3",
		"prettier": "3.3.3",
		"prettier-plugin-sh": "0.14.0",
		"ts-jest": "29.2.5",
		"ts-mock-api": "1.0.13",
		"ts-node": "10.9.2",
		"typescript": "5.6.2"
	},
	"packageManager": "pnpm@9.10.0",
	"engines": {
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
